@model Saturn.Account.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Управување со корисничкиот профил";
}

<h3>@ViewBag.Title.</h3>
<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-8">
        <p>
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Промени ја лозинката", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Pick a password", "SetPassword")
            }
        </p>
    </div>
</div>
