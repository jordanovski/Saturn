@model Saturn.Model.Codebooks.ReqDocDrivingCategory

@{
    ViewBag.Title = "Докименти за категорија " + Session["Category"];
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Промени документ за катедорија - @Session["Category"]</h3>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(m => m.DrivingCategoryId)

        <div class="form-group">
            @Html.LabelFor(model => model.ReqDocumentId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().DropDownListFor(m => m.ReqDocumentId)
                    .BindTo(ViewBag.ReqDocumentId)
                    .DataValueField("Value")
                    .DataTextField("Text")
                    .OptionLabel("Одбери документ")
                    .HtmlAttributes(new { style = "width: 540px" }))
                @Html.ValidationMessageFor(model => model.ReqDocumentId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сними" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вратисе назад", "Index", new { Id = System.Web.HttpContext.Current.Session["DrivingCategoryId"] })
</div>
