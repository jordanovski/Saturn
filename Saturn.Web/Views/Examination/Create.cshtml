@model Saturn.Model.Examination

@{
    ViewBag.Title = "Терними";
}

<h3>Нов</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h5>Термин</h5>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ExamCenterId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().DropDownListFor(m => m.ExamCenterId)
                    .BindTo(ViewBag.ExamCenterId)
                    .DataValueField("Value")
                    .DataTextField("Text")
                    .OptionLabel("Одбери испитен центар")
                    .HtmlAttributes(new { style = "width:250px" }))
                @Html.ValidationMessageFor(model => model.ExamCenterId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExamDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().DatePickerFor(m => m.ExamDate).Format("dd/MM/yyyy"))
                @Html.ValidationMessageFor(model => model.ExamDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExamTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().TimePickerFor(m => m.ExamTime).Format("HH:mm").Min("07:00 AM").Max("19:00 PM"))
                @Html.ValidationMessageFor(model => model.ExamTime)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExamTypeId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().DropDownListFor(m => m.ExamTypeId)
                    .BindTo(ViewBag.ExamTypeId)
                    .DataValueField("Value")
                    .DataTextField("Text")
                    .OptionLabel("Одбери тип на испит")
                    .HtmlAttributes(new { style = "width:250px" }))
                @Html.ValidationMessageFor(model => model.ExamTypeId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PresidentId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().DropDownListFor(m => m.PresidentId)
                    .BindTo(ViewBag.PresidentId)
                    .DataValueField("Value")
                    .DataTextField("Text")
                    .OptionLabel("Одбери председател")
                    .HtmlAttributes(new { style = "width:250px" }))
                @Html.ValidationMessageFor(model => model.PresidentId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExaminerId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().DropDownListFor(m => m.ExaminerId)
                    .BindTo(ViewBag.ExaminerId)
                    .DataValueField("Value")
                    .DataTextField("Text")
                    .OptionLabel("Одбери испитувач")
                    .HtmlAttributes(new { style = "width:250px" }))
                @Html.ValidationMessageFor(model => model.ExaminerId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MemberId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().DropDownListFor(m => m.MemberId)
                    .BindTo(ViewBag.MemberId)
                    .DataValueField("Value")
                    .DataTextField("Text")
                    .OptionLabel("Одбери член")
                    .HtmlAttributes(new { style = "width:250px" }))
                @Html.ValidationMessageFor(model => model.MemberId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сними" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вратисе назад", "Index")
</div>
