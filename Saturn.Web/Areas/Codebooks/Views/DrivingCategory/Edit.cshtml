@model Saturn.Model.Codebooks.DrivingCategory

@{
    ViewBag.Title = "Возачки категории";
}

<h3>Промени</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h5>Возачка категорија</h5>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Category, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Category)
                @Html.ValidationMessageFor(model => model.Category)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AllowedNegativeTheory, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AllowedNegativeTheory)
                @Html.ValidationMessageFor(model => model.AllowedNegativeTheory)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AllowedNegativePolygon, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AllowedNegativePolygon)
                @Html.ValidationMessageFor(model => model.AllowedNegativePolygon)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AllowedNegativePracticle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AllowedNegativePracticle)
                @Html.ValidationMessageFor(model => model.AllowedNegativePracticle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control input-sm", @rows = 6 })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сними" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вратисе назад", "Index")
</div>
