@model Saturn.Model.Codebooks.PriceList

@{
    ViewBag.Title = "Ценовник";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ценовник</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.DrivingCategoryId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().DropDownListFor(m => m.DrivingCategoryId)
                    .BindTo(ViewBag.DrivingCategoryId)
                    .DataValueField("Value")
                    .DataTextField("Text")
                    .OptionLabel("Одбери категорија")
                    .HtmlAttributes(new { style = "width: 250px" }))
                @Html.ValidationMessageFor(model => model.DrivingCategoryId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExamTypeId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().DropDownListFor(m => m.ExamTypeId)
                    .BindTo(ViewBag.ExamTypeId)
                    .DataValueField("Value")
                    .DataTextField("Text")
                    .OptionLabel("Одбери тип на испит")
                    .HtmlAttributes(new { style = "width: 250px" }))
                @Html.ValidationMessageFor(model => model.ExamTypeId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PriceFirst, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PriceFirst)
                @Html.ValidationMessageFor(model => model.PriceFirst)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TaxFirst, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaxFirst)
                @Html.ValidationMessageFor(model => model.TaxFirst)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PriceRepeated, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PriceRepeated)
                @Html.ValidationMessageFor(model => model.PriceRepeated)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TaxRepeated, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaxRepeated)
                @Html.ValidationMessageFor(model => model.TaxRepeated)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaterialCosts, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaterialCosts)
                @Html.ValidationMessageFor(model => model.MaterialCosts)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VAT, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VAT)
                @Html.ValidationMessageFor(model => model.VAT)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Note, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Note, new { @class = "form-control input-sm", @rows = 2 })
                @Html.ValidationMessageFor(model => model.Note)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вратисе назад", "Index")
</div>
