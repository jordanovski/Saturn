@model Saturn.Model.Codebooks.Instructor

@{
    ViewBag.Title = "Инструктори";
}

<h3>Нов</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h5>Инструктор</h5>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LastName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UniqueNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UniqueNumber)
                @Html.ValidationMessageFor(model => model.UniqueNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DrivingSchoolId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().DropDownListFor(m => m.DrivingSchoolId)
                    .BindTo(ViewBag.DrivingSchoolId)
                    .DataValueField("Value")
                    .DataTextField("Text")
                    .OptionLabel("Одбери авто школа")
                    .HtmlAttributes(new { style = "width: 250px" }))
                @Html.ValidationMessageFor(model => model.DrivingSchoolId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Practice, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.Practice)
                @Html.ValidationMessageFor(model => model.Practice)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Theory, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.Theory)
                @Html.ValidationMessageFor(model => model.Theory)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сними" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вратисе назад", "Index")
</div>
