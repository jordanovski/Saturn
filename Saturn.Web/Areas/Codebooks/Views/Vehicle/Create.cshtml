@model Saturn.Model.Codebooks.Vehicle

@{
    ViewBag.Title = "Возила";
}

<h3>Ново</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h5>Возило</h5>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.DrivingSchoolId, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @(Html.Kendo().DropDownListFor(m => m.DrivingSchoolId)
                    .BindTo(ViewBag.DrivingSchoolId)
                    .DataValueField("Value")
                    .DataTextField("Text")
                    .OptionLabel("Одбери авто школа")
                    .HtmlAttributes(new { style = "width: 250px" }))
                @Html.ValidationMessageFor(model => model.DrivingSchoolId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VehicleTypeId, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @(Html.Kendo().DropDownListFor(m => m.VehicleTypeId)
                    .BindTo(ViewBag.VehicleTypeId)
                    .DataValueField("Value")
                    .DataTextField("Text")
                    .OptionLabel("Одбери тип")
                    .HtmlAttributes(new { style = "width: 250px" }))
                @Html.ValidationMessageFor(model => model.VehicleTypeId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VehicleBrandId, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @(Html.Kendo().DropDownListFor(m => m.VehicleBrandId)
                    .BindTo(ViewBag.VehicleBrandId)
                    .DataValueField("Value")
                    .DataTextField("Text")
                    .OptionLabel("Одбери бренд")
                    .HtmlAttributes(new { style = "width: 250px" }))
                @Html.ValidationMessageFor(model => model.VehicleBrandId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CommercialMark, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.CommercialMark, new { @class = "form-control input-sm" })
                @Html.ValidationMessageFor(model => model.CommercialMark)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RegistrationNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.RegistrationNumber, new { @class = "form-control input-sm" })
                @Html.ValidationMessageFor(model => model.RegistrationNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.CheckBoxFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-7">
                <input type="submit" value="Сними" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вратисе назад", "Index")
</div>
